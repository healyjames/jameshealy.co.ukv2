---
interface Props {
    role: string
    time: string
    company: string
    location: string
}

const { role, time, company, location } = Astro.props
---

<li class="flex m-0">
    <div class="flex flex-col items-center mr-6">
        <div class="w-3 h-3 bg-primary rounded-full"></div>
        <div class="w-0.5 bg-primary flex-grow"></div>
    </div>
    <div class="w-full lg:grid lg:grid-cols-[1fr_2fr] -mt-2 mb-4">
        <div>
            <time class="whitespace-nowrap font-bold uppercase">{ time }</time>  <!-- 2 -->
            <p class="mb-0">{ company }</p>  <!-- 3 -->
            <p class="mt-0 mb-8 text-sm">{ location }</p>  <!-- 4 -->
        </div>
        <div>
            <p class="text-2xl mt-0 font-bold uppercase tracking-widest">{ role }</p> <!-- 1 -->
            <slot />  <!-- 5 -->
            <div class="mb-16"></div>  <!-- 6 -->
        </div>
    </div>
</li>