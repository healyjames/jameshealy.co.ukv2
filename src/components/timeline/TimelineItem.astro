---
interface Props {
    role: string
    time: string
    company: string
    location: string
}

const { role, time, company, location } = Astro.props
---

<li class="flex m-0">
    <div class="flex flex-col items-center mr-6">
        <div class="w-3 h-3 bg-primary rounded-full"></div>
        <div class="w-0.5 bg-primary flex-grow"></div>
    </div>
    <div class="my-4">
        <p class="text-2xl font-bold uppercase tracking-widest">{ role }</p>
        <div class="mt-1 mb-12 h-0.5 bg-secondary max-w-16"></div>
        <time class="font-bold uppercase">{ time }</time>
        <p class="mb-0">{ company }</p>
        <p class="mt-0 text-sm">{ location }</p>
        <slot />
    </div>
</li>