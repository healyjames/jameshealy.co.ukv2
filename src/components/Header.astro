---


interface Props {
	title: string
	subtitle: string
}

const { title, subtitle } = Astro.props
---

<header>

        <div class="h-[75vh] mx-10 grid grid-rows-2 lg:grid-rows-none lg:grid-cols-2 grid-flow-col lg:gap-16 items-center justify-center flex-nowrap">
            <h1 class="font-bold text-7xl xl:text-8xl m-1 xl:leading-tight leading-tight font-bold bg-gradient-to-r from-[#FA8BFF] via-[#2BD2FF] to-[#2BFF88] text-transparent bg-clip-text">{title}</h1>
            <h2 class="font-normal xl:text-2xl">{subtitle}</h2>
        </div>

        
</header>