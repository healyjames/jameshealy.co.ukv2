---
import Content from "./Content.astro"

interface Props {
	title: string
	subtitle: string
}

const { title, subtitle } = Astro.props
---

<header>
    <Content>
        <div class="h-[75vh] flex flex-col lg:flex-row lg:gap-16 items-center justify-center flex-nowrap">
            <h1 class="font-bold text-7xl xl:text-8xl m-0">{title}</h1>
            <h3 class="font-normal xl:text-2xl">{subtitle}</h3>
        </div>
    </Content>
</header>